<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/customers/add">
                <table cellpadding="11">
                    <tr>
                        <td class="label">Attending Workshop Name</td><td>: <select type="text" name="ws_name" required style="background: #fff;width: 200px;height: 26px;">
                           <option value="yes">2-3 May 2020 </option>
                           
                   </select></td>
                     </tr>
                <tr>
                    <td class="label">Name of Participant</td><td>: <input type="text" name="name" required></td>
                 </tr>

                 <tr>
                    <td class="label">Gender</td><td>:
                         <select type="text" name="gender" required style="background: #fff;width: 200px;height: 26px;">
                             <option value="M">Male</option>
                             <option value="F">Female</option>
                             <option value="O">Other</option>
                     </select></td>
                 </tr>
                 <tr>
                    <td class="label">Mobile Number</td><td>: <input type="number" name="phone" style="width: 300px;height: 24px;" required></td>
                 </tr>

                 <tr>
                    <td class="label">Alternate Mobile </td><td>: <input type="number" name="alt_phone" style="width: 300px;height: 24px;" required></td>
                 </tr> 
                
                <tr>
                    <td class="label">Email ID</td><td>: <input type="text" name="email" required></td>
                 </tr>

                 <tr>
                    <td class="label">Designation</td><td>: <input type="text" name="designation" required></td>
                 </tr>
                 <tr>
                    <td class="label">Educational Qualification</td><td>: <input type="text" name="qualification" required></td>
                 </tr>
                 <tr>
                    <td class="label">Department</td><td>: <input type="text" name="department" required></td>
                 </tr>
                 <tr>
                    <td class="label">Institute Name</td><td>: <input type="text" name="institute" required></td>
                 </tr>
                 <tr>
                    <td class="label">Complete Office address with pincode</td><td>:  <textarea name="address" required cols="30" rows="5"></textarea></td>
                 </tr>
                 <tr>
                    <td class="label">Type of institute</td><td>: <select type="text" name="typeofinst" required style="background: #fff;width: 200px;height: 26px;">
                        <option value="Govt">CFI</option>
                        <option value="Private">State Govt</option>
                        <option value="Semi-Govt">Deemed</option>
                        <option value="Semi-Govt">Autonomous</option>
                        <option value="Semi-Govt">Private</option>
                        <option value="Semi-Govt">Others</option>
                        </select></td>
                 </tr>
                 <tr>
                    <td class="label">Subjects taught so far</td><td>: <input type="text" name="subjects" required></td>
                 </tr>
                 <tr>
                    <td class="label">No. of refresher courses/workshops attended</td><td>: <input type="text" name="number" required></td>
                 </tr>
                 <tr>
                    <td class="label">Teaching Experience (in years):</td><td>: <input type="text" name="teach" required></td>
                 </tr>
                 <tr>
                    <td class="label">Research Experience (in years):</td><td>: <input type="text" name="research" required></td>
                 </tr>
                 <tr>
                    <td class="label">Industry Experience (in years):</td><td>: <input type="text" name="industry" required></td>
                 </tr>

                 <tr>
                    <td class="label" valign="top">Category</td><td valign="top">: <select type="text" name="category" required style="background: #fff;width: 200px;height: 26px;">
                        <option value="category_1">General</option>
                        <option value="category_2">OBC</option>
                        <option value="category_3">SC/ST</option>
                </select></td>
                </tr>
                <tr>
                    <td class="label" valign="top">Familiarity with using any LMS</td><td valign="top">:<select type="text" name="lms" required style="background: #fff;width: 200px;height: 26px;">
                        <option value="yes">Yes</option>
                        <option value="no">No</option>
                </select></td>
                </tr>
                <tr>
                    <td class="label" valign="top">If Yes, give details</td><td valign="top">: <textarea name="lms_info" required cols="30" rows="5"></textarea></td>
                </tr>
                <tr>
                    <td class="label" valign="top">Exposure on assessment methods</td><td valign="top">: <textarea name="exposure" required cols="30" rows="5"></textarea></td>
                </tr>
                <tr>
                    <td class="label" valign="top">Are you willing to train other faculty members</td><td valign="top">: <select type="text" name="willing" required style="background: #fff;width: 200px;height: 26px;">
                        <option value="yes">Yes</option>
                        <option value="no">No</option>
                </select></td>
                </tr>


                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Submit">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        

